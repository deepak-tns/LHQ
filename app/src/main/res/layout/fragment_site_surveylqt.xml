<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.SiteSurveylqt">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <ScrollView
         android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:layout_margin="5dp"
            android:text="Lat Log :"
            android:layout_gravity="left"
            android:id="@+id/lat_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:text="Date"
            android:layout_gravity="right"
            android:id="@+id/surveyformdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="SurveyType"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spinner_siteaudit"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--    <TextView
                android:id="@+id/tv_siteaudit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Site Audit :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_customer"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Customer :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spinner_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--
            <TextView
                android:id="@+id/tv_ericsson"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Ericsson :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_operator"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Operator :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spi_operator"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_circle"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spi_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <TextView
                android:id="@+id/tv_circlestate"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="State :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/tv_technology"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Technology :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spi_technology"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_technologytype"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Activity Type :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <Spinner
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spi_technology_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <!--   <TextView
                android:id="@+id/tv_technology_scf"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:text="Technology SCF :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_location"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Location :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/spi_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_otherlocation"
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--   <TextView
                   android:id="@+id/tv_technology_scf"
                   android:layout_gravity="center"
                   android:layout_weight="1.2"
                   android:text="Technology SCF :"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_other"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Other :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/edt_border"
                android:id="@+id/edt_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_siteid"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Site ID :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <EditText
                android:text=""
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/edt_border"
                android:id="@+id/edt_siteid"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_clusterid"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Cluster ID :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <EditText
                android:text=""
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:background="@drawable/edt_border"
                android:id="@+id/edt_clusterid"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <Button

        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_small"
        android:layout_gravity="bottom|center"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shadow_bg"
        android:text="Next" />

    </LinearLayout>
</FrameLayout>